#!/usr/bin/env bash

export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWDIRTYSTATE=1

_josh_prompt_command() {
  local blue="\[\e[1;34m\]"
  local green="\[\e[1;32m\]"
  local yellow="\[\e[1;33m\]"
  local reset="\[\e[0;m\]"

  local git_tmp=$(__git_ps1 2> /dev/null)

  local GIT= HOST=

  if [ "$SSH_CONNECTION" ]; then
    host="${yellow}\u@\H${reset} "
  fi

  if [ "$git_tmp" ]; then
    git="${green}${git_tmp}${reset}"
  fi

  local pat=$(printf '/*%.0s' {1..3})
  local cwd=${PWD/$HOME/\~}
  local tmp=${cwd%$pat}

  if [ ${#tmp} -gt 0 -a "$tmp" != "$cwd" ]; then
    prompt_cwd=$(printf "${cwd:${#tmp}+1}")
  else
    prompt_cwd=$(printf "$cwd")
  fi

  PS1="${host}${blue}${prompt_cwd}${reset}${git} $ "

  case "$TERM" in
    xterm*|rxvt*)
      PS1="${PS1}\e]0;${SSH_CONNECTION:+\u@\M:}\w\a"
      ;;
  esac
}

export PROMPT_COMMAND=_josh_prompt_command
