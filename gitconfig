[user]
  name = Joshua Priddle
  email = jpriddle@me.com

[github]
  user  = itspriddle
  token = token

[color]
  ui = auto

[color "status"]
  header    = yellow bold
  added     = green bold
  updated   = green reverse
  changed   = magenta bold
  untracked = red

[color "diff"]
  meta       = yellow bold
  frag       = magenta bold
  old        = red bold
  new        = green bold
  whitespace = red reverse

[push]
  default = current

[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[format]
  pretty = format:[%Cred%h%Creset] %C(yellow)%d%Creset %Cred%an%Creset: %s %Cgreen(%cr)%Creset

[web]
  browser = open

[help]
  format  = web

[alias]
  msg     = commit --allow-empty -m
  man     = help --man
  lg      = log --graph --abbrev-commit --date=relative
  up      = !git pull && git lg HEAD@{1}..
  pa      = add --patch
  unstage = reset HEAD --
  last    = !git --no-pager log -1 HEAD && echo
  web     = instaweb --httpd=webrick -b open
  count   = shortlog -sn
  pending = !git --no-pager log origin/master..master && echo
  browse  = !hub browse  -- $(git symbolic-ref HEAD | sed 's|refs/heads|tree|')
  compare = !hub compare
  oreilly = commit -m \"Fuck it, well do it live\"
  shorten = "!sh -c 'curl -s -i http://git.io -F url=$1 | grep Location' -"


# vim:set ft=gitconfig:
