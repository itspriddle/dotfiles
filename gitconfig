[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = /Users/priddle/.gitignore
  editor       = mate -w

[github]
  user  = itspriddle
  token = token

[alias]
  lg      = log --graph --pretty=format:'[%Cred%h%Creset] - %Cred%ae%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  up      = !sh -c 'git pull && git log --pretty=format:\"%Cred%h - %ae %Creset- %C(yellow)%s %Creset(%ar)\" HEAD@{1}..'
  pa      = add --patch
  unstage = reset HEAD --
  last    = log -1 HEAD
