[user]
	name       = Joshua Priddle
	email      = jpriddle@me.com
	signingkey = E7ED7E4CEC917FE0

[color]
	ui = auto

[color "status"]
	header    = yellow bold
	added     = green bold
	updated   = green reverse
	changed   = magenta bold
	untracked = red

[color "diff"]
	meta       = yellow bold
	frag       = magenta bold
	old        = red bold
	new        = green bold
	whitespace = red reverse

[branch]
	sort = -authordate

[push]
	default = current

[fetch]
	prune = true

[merge]
	ff = only
	tool = fugitive

[commit]
	gpgsign = true

[core]
	whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore
	commentChar = ";"

[format]
	pretty = format:%C(red)%h%Creset%C(yellow)%d%Creset %C(magenta)%an%Creset: %s %C(green)(%ar)%Creset

[alias]
	amend            = !git commit --amend --date=\"$(date)\" -C HEAD
	branch-name      = rev-parse --abbrev-ref HEAD
	copy-last-sha    = !git last-sha | tr -d '\n' | pbcopy
	full-log         = log --format=fuller
	last-sha         = rev-parse --short HEAD
	lg               = log --graph --abbrev-commit --date=relative
	man              = help --man
	msg              = commit --allow-empty -m
	pa               = add --patch
	pending          = !git --no-pager log origin/master..master && echo
	undo             = reset --soft HEAD^
	unstage          = reset HEAD -- ...
	web              = instaweb --httpd=webrick -b open
	prune-branches   = !git branch --merged | grep -v '^master$' | grep -v "\\\\*" | xargs -n 1 git branch -d
	fetch-pr         = "!f() { git fetch origin refs/pull/$1/head:pr/$1; } ; f"
	recent-branches  = for-each-ref --count=10 --sort=-committerdate --format=\"%(refname:short)\" refs/heads/
	fixup            = "!f() { git commit $* --fixup HEAD; }; f"
	pulls            = browse -- pulls
	strip-whitepsace = !git ls-files | xargs perl -i -pe 's/[\\t ]+$//g'
	showf            = show --format=fuller
	prq              = pull-request --push --copy --browse
	todo             = grep -wniI -e TODO -e FIXME
	last-committer   = --no-pager log --pretty="%an" --no-merges -1

[advice]
	statusHints        = false
	pushNonFastForward = false

[rebase]
	autosquash = true
	autostash  = true

[stash]
	showStat  = true
	showPatch = true

[include]
	path = ~/.gitconfig.local

[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[filter "lfs"]
	smudge = git-lfs smudge %f
	required = true
	clean = git-lfs clean %f

; vim:ft=gitconfig
