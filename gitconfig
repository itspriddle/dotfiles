[user]
  name  = Joshua Priddle
  email = jpriddle@nevercraft.net

[color]
  ui = auto

# [color "branch"]
#   current = yellow reverse
#   local   = yellow
#   remote  = green

[color "diff"]
  meta       = yellow bold
  frag       = magenta bold
  old        = red bold
  new        = green bold
  whitespace = red reverse

# [color "status"]
#   added     = yellow
#   changed   = green
#   untracked = cyan

[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = /Users/priddle/.gitignore
  editor       = mate -w

[github]
  user  = itspriddle
  token = token

[format]
  pretty = format:[%Cred%h%Creset] %C(yellow)%d%Creset %Cred%an%Creset: %s %Cgreen(%cr)%Creset

[alias]
  lg      = log --graph --abbrev-commit --date=relative
  up      = !git pull && git lg HEAD@{1}..
  pa      = add --patch
  unstage = reset HEAD --
  last    = !git --no-pager log -1 HEAD && echo
  web     = instaweb --httpd=webrick -b open
  pending = !git --no-pager log origin/master..master && echo
  browse  = !open $(\
    echo "`git config remote.origin.url`" |\
    ruby -e \"print 'http://' + ARGF.read.sub(/^(git\\:\\/\\/|git@|http\\:\\/\\/)/, '').sub(':', '/').sub(/\\.git\\$/, '')\"\
  )

[push]
  default = current

