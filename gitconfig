[user]
	name  = Joshua Priddle
	email = jpriddle@me.com

[color]
	ui = auto

[color "status"]
	header    = yellow bold
	added     = green bold
	updated   = green reverse
	changed   = magenta bold
	untracked = red

[color "diff"]
	meta       = yellow bold
	frag       = magenta bold
	old        = red bold
	new        = green bold
	whitespace = red reverse

[push]
	default = current

[fetch]
	prune = true

[merge]
	ff = only

[core]
	whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[format]
	pretty = format:%C(red)%h%Creset%C(yellow)%d%Creset %C(magenta)%an%Creset: %s %C(green)(%ar)%Creset

[alias]
	amend           = commit --amend -C HEAD
	branch-name     = rev-parse --abbrev-ref HEAD
	copy-last-sha   = !git last-sha | tr -d '\n' | pbcopy
	full-log        = log --format=fuller
	last-sha        = rev-parse --short HEAD
	lg              = log --graph --abbrev-commit --date=relative
	man             = help --man
	msg             = commit --allow-empty -m
	pa              = add --patch
	pending         = !git --no-pager log origin/master..master && echo
	undo            = reset --soft HEAD^
	unstage         = reset HEAD -- ...
	web             = instaweb --httpd=webrick -b open
	prune-branches  = !git branch --merged | grep -v "\\\\*" | xargs -n 1 git branch -d
	fetch-pr        = "!f() { git fetch origin refs/pull/$1/head:pr/$1; } ; f"
	recent-branches = for-each-ref --count=5 --sort=-committerdate --format=\"%(refname:short)\" refs/heads/
	fixup           = "!f() { git commit $* --fixup HEAD; }; f"
	pulls           = browse -- pulls

[advice]
	statusHints        = false
	pushNonFastForward = false

[rebase]
	autosquash = true

[include]
	path = .gitconfig.local

; vim:ft=gitconfig
