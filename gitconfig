[include]
  path = .gitconfig-private

[color]
  ui = auto

[color "status"]
  header    = yellow bold
  added     = green bold
  updated   = green reverse
  changed   = magenta bold
  untracked = red

[color "diff"]
  meta       = yellow bold
  frag       = magenta bold
  old        = red bold
  new        = green bold
  whitespace = red reverse

[push]
  default = current

[core]
  whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[format]
  pretty = format:[%Cred%h%Creset] %C(yellow)%d%Creset %Cred%an%Creset: %s %Cgreen(%cr)%Creset

[web]
  browser = open

[help]
  format  = web

[alias]
  sexytime     = !git push -u && git pull-request
  msg          = commit --allow-empty -m
  man          = help --man
  lg           = log --graph --abbrev-commit --date=relative
  pa           = add --patch
  unstage      = reset HEAD --
  last         = log -1 HEAD
  web          = instaweb --httpd=webrick -b open
  count        = shortlog -sn
  pending      = !git --no-pager log origin/master..master && echo
  browse       = !hub browse  -- $(git symbolic-ref HEAD | sed 's|refs/heads|tree|')
  compare      = !hub compare
  shorten      = !sh -c 'curl -s -i http://git.io -F url=$1 | grep Location | sed s/Location:\\ //' -
  pull-request = !hub pull-request
  feature      = !sh -c '[ "$#" = 1 ] && git checkout -b feature/$1 || echo "Usage: git feature NAME" && exit 1' -
  bugfix       = !sh -c '[ "$#" = 1 ] && git checkout -b bugfix/$1  || echo "Usage: git bugfix NAME" && exit 1' -

# vim:ft=gitconfig
