[user]
	name = Joshua Priddle
	email = jpriddle@me.com

[github]
	user = itspriddle
	password = !security find-internet-password -gs github.com -w | tr -d '\n'

[color]
	ui = auto

[color "status"]
	header    = yellow bold
	added     = green bold
	updated   = green reverse
	changed   = magenta bold
	untracked = red

[color "diff"]
	meta       = yellow bold
	frag       = magenta bold
	old        = red bold
	new        = green bold
	whitespace = red reverse

[push]
	default = current

[core]
	whitespace   = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

[format]
	pretty = format:[%C(red)%h%Creset]%C(yellow)%d%Creset %C(magenta)%an%Creset: %s %C(green)(%ar)%Creset

[merge]
	tool = mvim
	stat = true

[mergetool "mvim"]
	cmd        = mvim -d -g $LOCAL $MERGED $REMOTE
	keepbackup = false

[alias]
	amend          = commit --amend -C HEAD
	branch-name    = !git symbolic-ref HEAD | sed 's|refs/heads/||g'
	copy-last-sha  = !git last-sha | tr -d '\n' | pbcopy
	count          = shortlog -sn
	full-log       = log --format=fuller
	last-sha       = rev-parse --short HEAD
	lg             = log --graph --abbrev-commit --date=relative
	man            = help --man
	msg            = commit --allow-empty -m
	pa             = add --patch
	pending        = !git --no-pager log origin/master..master && echo
	undo           = reset --soft HEAD^
	unstage        = reset HEAD
	web            = instaweb --httpd=webrick -b open
	prune-branches = !git branch --merged | grep -v "\\\\*" | xargs -n 1 git branch -d
	fetch-pr       = "!f() { git fetch origin refs/pull/$1/head:pr/$1; } ; f"

[advice]
	statusHints = false
	pushNonFastForward = false

[rebase]
	autosquash = true

[credential]
	helper = osxkeychain

; vim:ft=gitconfig
