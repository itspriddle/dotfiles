#!/usr/bin/env bash

# Enable debug mode
if [[ "$DEBUG" ]]; then
  export PS4='+ [${BASH_SOURCE##*/}:$LINENO] '
  set -x
fi

FEEDS=/volume1/docker/network.priddle.home/public/feeds/speedtest

[[ ! -d "$FEEDS" ]] && mkdir "$FEEDS"

~/.dotfiles/share/speedtest/latest |
  tee "$FEEDS/latest.json.tmp"

mv -f "$FEEDS/latest.json.tmp" "$FEEDS/latest.json"
