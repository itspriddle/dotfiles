#!/usr/bin/env bash
# Usage: opnsense-vnstat-json [options] [traffic|total|hourly|daily|monthly|yearly]

# Enable debug mode
if [[ "$DEBUG" ]]; then
  export PS4='+ [${BASH_SOURCE##*/}:$LINENO] '
  set -x
fi

set -euo pipefail

IFACE=igb0

_vnstat() {
  ssh -q vnstat.router.priddle.network vnstat -i "$IFACE" --json "$@"
}

_vnstat "$@"
