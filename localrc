# Local config

export PROMPT_HOST="macbook"

# RVM
[[ -s $HOME/.rvm/scripts/rvm ]] && source $HOME/.rvm/scripts/rvm

# Set GEM_HOME and GEM_PATH if RVM hasn't yet
[[ -z "$GEM_HOME" ]] && export GEM_HOME="$HOME/.gem/ruby/1.8"
[[ -z "$GEM_PATH" ]] && export GEM_PATH="$HOME/.gem/ruby/1.8"

# Load a 'private' file with sensitive info that shouldn't be
# kept in this repository
[[ -f ~/.localrc-private ]] && . ~/.localrc-private

# vim:set ft=zsh:
