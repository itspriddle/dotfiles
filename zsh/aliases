# cd
alias ..='cd ..'
alias ...='cd ../..'

# ls
if [ $ZSH_PLATFORM = "Darwin" ]; then
  alias ls='ls -G'
else
  alias ls='ls --color'
fi

alias l='ls'
alias ll='ls -lh'
alias lla='ls -alh'
alias lk='ls -lSr'
alias la='ls -A'
alias lr='ls -lR'
alias lt='ls -ltr'
alias lm='ls -al | more'

# git
alias ga='git add'
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status -sb'
alias grm="git status | grep deleted | cut -f2 -d ':' | sed 's/^ *//; s/ *\$//; s/ /\\\\ /g' | xargs git rm"
alias gw='git web'

# rails
alias ss='script/server'
alias sg='script/generate'
alias migrate='rake db:migrate'
alias remigrate='rake db:migrate VERSION=0 && rake db:migrate && rake db:seed'
alias rg="rails generate"
alias rc="rails console"
alias sc="rails console"

# Others
alias path='echo -e ${PATH//:/\\n}'
alias rm='rm -iv'
alias cp='cp -iv'
alias mv='mv -iv'
alias grep='grep --color'
alias dush='du -shc'

# OS X
if [[ $ZSH_PLATFORM = "Darwin" ]]; then
  alias apachectl='sudo apachectl'
  alias crontab='EDITOR=vim crontab'
  alias mute="osascript -e 'set volume output muted true'"
  alias unmute="osascript -e 'set volume output muted false'"
fi

# vim:set ft=zsh:
