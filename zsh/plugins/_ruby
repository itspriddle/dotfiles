ruby_version="ruby-2.1.5"

path=(
  # mkdir .git/safe in the root of repositories you trust
  .git/safe/../../bin
  .git/safe/../../.bundle/bin
  $HOME/.gem/ruby/2.1.0/bin
  $HOME/.rubies/$ruby_version/bin
  $path
)

export GEM_HOME=$HOME/.gem/ruby/2.1.0
export GEM_PATH=$HOME/.gem/ruby/2.1.0:$HOME/.rubies/$ruby_version/lib/ruby/gems/2.1.0

