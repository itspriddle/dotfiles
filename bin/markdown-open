#!/bin/bash

function debug() {
  echo "$@" 1>&2
}

f=$1
if [ -z "$f" ] || [ "$f" = "-" ] ; then
  f=/tmp/markdown-$$.txt
  cat > $f
  trap "rm -f $f" 0
fi

bn=$(basename $f | sed 's:^\(.*\)\.txt$:\1:')
html_file="$(dirname $f)/$bn-markdown.html"
cat <<EOF > $html_file
<html>
  <head>
  <title>$f</title>
  <style type="text/css">
  html, body {
    font: 13px/20px "Lucida Grande", Tahoma, Arial, Verdana, sans-serif;
    color: #666;
    background: #fff;
    height: 100%;
  }

  code, kbd, samp, pre, tt, var {
    font-family: Monaco, "Courier New", mono-space, monospace;
  }

  h1, h2, h3, h4, h5, h6 {
    color: #333;
    border: 0 !important;
  }

  h1 {
    font-size: 170% !important;
    border-top: 4px solid #aaa !important;
    padding-top: .5em !important;
    margin-top: 1.5em !important;
  }

    h1:first-child {
      margin-top: 0 !important;
      padding-top: .25em !important;
      border-top: none !important;
    }

  h2 {
    font-size: 150% !important;
    margin-top: 1.5em !important;
    border-top: 4px solid #e0e0e0 !important;
    padding-top: .5em !important;
  }

  h3 {
    margin-top: 1em !important;
  }

  p {
    margin: 1em 0 !important;
    line-height: 1.5em !important;
  }

  ul {
    margin: 1em 0 1em 2em !important;
  }

    ul {
      margin-top: 0 !important;
      margin-bottom: 0 !important;
    }

  ol {
    margin: 1em 0 1em 2em !important;
  }

    ol ol {
      margin-top: 0 !important;
      margin-bottom: 0 !important;
    }

  ul ul,
  ul ol,
  ol ol,
  ol ul {
    margin-top: 0 !important;
    margin-bottom: 0 !important;
  }

  blockquote {
    margin: 1em 0 !important;
    border-left: 5px solid #ddd !important;
    padding-left: .6em !important;
    color: #555 !important;
  }

  dt {
    font-weight: bold !important;
    margin-left: 1em !important;
  }

  dd {
    margin-left: 2em !important;
    margin-bottom: 1em !important;
  }

  table {
    margin: 1em 0 !important;
  }

    table th {
      border-bottom: 1px solid #bbb !important;
      padding: .2em 1em !important;
    }

    table td {
      border-bottom: 1px solid #ddd !important;
      padding: .2em 1em !important;
    }

  pre {
    margin: 1em 0 !important;
    font-size: 90% !important;
    background-color: #E6E6E6 !important;
    border: 1px solid #dedede !important;
    padding: .5em !important;
    line-height: 1.5em !important;
    color: #444 !important;
    overflow: auto !important;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
  }

    pre::-webkit-scrollbar {
      height: 8px;
      width: 8px;
    }

    pre::-webkit-scrollbar-track-piece {
      margin-bottom:10px;
      background-color:#e5e5e5;
      border-bottom-left-radius:4px 4px;
      border-bottom-right-radius:4px 4px;
      border-top-left-radius: 4px 4px;
      border-top-right-radius: 4px 4px;
    }

    pre::-webkit-scrollbar-thumb:vertical {
      height: 15px;
      background-color: #ccc;
      -webkit-border-radius: 4px;
    }

    pre::-webkit-scrollbar-thumb:horizontal {
      width: 15px;
      background-color: #ccc;
      -webkit-border-radius: 4px;
    }

    pre code {
      padding: 0 !important;
      font-size: 100% !important;
      background-color: #E6E6E6 !important;
      border: none !important;
      overflow: visible;
    }

  code {
    font-size: 90% !important;
    background-color: #E6E6E6 !important;
    color: #444 !important;
    padding: 0 .2em !important;
    border: 1px solid #dedede !important;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    border-radius: 4px;
  }

  hr {
    border: 0;
    color: #e0e0e0;
    background: #e0e0e0;
    height: 2px;
    width: 100%;
    text-align: left;
  }

  #container {
    padding: 10px;
  }
  </style>
  <body>
    <div id="container">
EOF
cat $f | markdown | smarty >> $html_file
cat <<EOF >> $html_file
    </div>
  </body>
</html>
EOF
rslt=$?
[ $rslt != 0 ] && exit $rslt
open $html_file
exit

# eventually:
tilt -y tomayko.erb "$@" | bpipe
