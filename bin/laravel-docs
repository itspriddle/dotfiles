open_page() {
  open "https://laravel.com/docs/12.x/$1"
}

if [[ $# -eq 1 ]]; then
  open_page "$1"
else
  fzf --bind "enter:become(open 'https://laravel.com/docs/12.x/{1}')" <<< "$(printf '%s\n' "${DOCS[@]}")"
fi
